{
  "extends": [
    "config:base",
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "digest"],
      "automerge": true,
    },
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.*/kustomization.yaml$",
      ],
      "matchStrings": [
        "https://raw.githubusercontent.com/(?<depName>[^/]+/[^/]+?)/(?<currentValue>[^/]+)/",
        "https://github.com/(?<depName>.*?)/releases/download/(?<currentValue>[^/]+)/",
      ],
      "datasourceTemplate": "github-releases",
    },
  ],
  "postUpdateOptions": [
    "gomodTidy",
  ],
}
